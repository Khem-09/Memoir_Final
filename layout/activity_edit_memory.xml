<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/memoir_background"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/btnBackEdit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@android:drawable/ic_media_previous"
                app:tint="@color/memoir_gold"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Memory"
                android:textColor="@color/memoir_text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/bg_card_white"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/imgEditPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@android:color/transparent"/>

            <LinearLayout
                android:id="@+id/layoutEditPlaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@android:drawable/ic_menu_camera"
                    app:tint="@color/memoir_divider"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap to Change Photo"
                    android:textColor="@color/memoir_text_primary"
                    android:textStyle="bold"/>
            </LinearLayout>
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/memoir_text_primary"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/etEditTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_card_white"
            android:padding="10dp"
            android:textColor="@color/memoir_text_primary"
            android:textColorHint="@color/memoir_divider"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caption"
            android:textColor="@color/memoir_text_primary"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/etEditCaption"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg_card_white"
            android:padding="10dp"
            android:gravity="top"
            android:textColor="@color/memoir_text_primary"
            android:textColorHint="@color/memoir_divider"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@color/memoir_text_primary"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/etEditDate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_card_white"
            android:padding="10dp"
            android:focusable="false"
            android:clickable="true"
            android:drawableRight="@android:drawable/ic_menu_my_calendar"
            android:drawableTint="@color/memoir_gold"
            android:textColor="@color/memoir_text_primary"
            android:textColorHint="@color/memoir_divider"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textColor="@color/memoir_text_primary"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/etEditCategory"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_card_white"
            android:padding="10dp"
            android:textColor="@color/memoir_text_primary"
            android:textColorHint="@color/memoir_divider"
            android:layout_marginBottom="30dp"/>

        <Button
            android:id="@+id/btnUpdateMemory"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Update Memory"
            android:backgroundTint="@color/memoir_gold"
            android:textColor="@color/white"
            android:textStyle="bold"/>

    </LinearLayout>
</ScrollView>