<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/memoir_background"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/btnBackJournal"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_media_previous"
            android:layout_centerVertical="true"
            app:tint="@color/memoir_gold" />

        <TextView
            android:id="@+id/tvJournalDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today's Date"
            android:textColor="@color/memoir_teal"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/btnSaveJournal"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_menu_save"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:tint="@color/memoir_gold" />
    </RelativeLayout>

    <EditText
        android:id="@+id/etJournalContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_card_white"
        android:gravity="top|start"
        android:hint="Dear Diary..."
        android:textColor="@color/memoir_text_primary"
        android:textColorHint="@color/memoir_divider"
        android:padding="20dp"
        android:lineSpacingExtra="6dp"
        android:textSize="16sp"/>

</LinearLayout>