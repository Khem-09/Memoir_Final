<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/memoir_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="400dp">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/memoir_divider"/>

            <ImageView
                android:id="@+id/btnDetailBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_media_previous"
                android:background="@drawable/circle_gold_border"
                android:padding="8dp"
                app:tint="@color/memoir_gold"
                android:layout_margin="16dp"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/bg_card_white"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="-40dp"
            android:layout_marginBottom="20dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/tvDetailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Memory Title"
                android:textColor="@color/memoir_text_primary"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvDetailDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="October 25, 2023"
                android:textColor="@color/memoir_teal"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tvDetailAlbum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALBUM"
                android:background="@drawable/bg_gold_rounded"
                android:textColor="@color/white"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:id="@+id/tvDetailCaption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full story goes here..."
                android:textColor="@color/memoir_text_primary"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="40dp"/>

            <Button
                android:id="@+id/btnEditMemory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Memory"
                android:backgroundTint="@color/memoir_gold"
                android:textColor="@color/white"
                android:drawableLeft="@android:drawable/ic_menu_edit"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/btnDeleteMemory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Memory"
                android:backgroundTint="#B00020"
                android:textColor="@android:color/white"
                android:drawableLeft="@android:drawable/ic_menu_delete"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>