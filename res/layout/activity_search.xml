<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/memoir_background"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/btnBackSearch"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_media_previous"
            android:layout_marginEnd="10dp"
            app:tint="@color/memoir_gold" />

        <EditText
            android:id="@+id/etSearchQuery"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_card_white"
            android:hint="Search memories..."
            android:paddingHorizontal="16dp"
            android:textColor="@color/memoir_text_primary"
            android:textColorHint="@color/memoir_divider"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:maxLines="1"/>

        <ImageView
            android:id="@+id/btnDoSearch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_search"
            android:background="@drawable/bg_gold_rounded"
            android:padding="8dp"
            android:layout_marginStart="10dp"
            app:tint="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvResultsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Results"
        android:textColor="@color/memoir_teal"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_marginBottom="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>